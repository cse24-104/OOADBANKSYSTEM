            <TextField fx:id="branchField" alignment="CENTER" prefHeight="26.0" prefWidth="480.0" promptText="Branch" />
            <TextField fx:id="initialDepositField" alignment="CENTER" prefHeight="26.0" prefWidth="298.0" promptText="Initial Deposit" />
            <TextField fx:id="employerNameField" alignment="CENTER" prefHeight="26.0" prefWidth="394.0" promptText="Employer Name (Cheque)" />
            <TextField fx:id="employerAddressField" alignment="CENTER" promptText="Employer Address (Cheque)" />

            <HBox spacing="10" />
             <Button fx:id="createButton" text="Create Account" />
             <Button fx:id="backButton" text="Back" />
        </VBox>
    </children>
</AnchorPane>
